<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:id="@+id/VideoCard">

                <RelativeLayout
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:id="@+id/RL1">

                        <VideoView
                            android:layout_height="200dp"
                            android:layout_width="match_parent"
                            android:id="@+id/player_view"/>


                        <TextView
                            android:id="@+id/duration_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"/>

                </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/VideoCard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/VideoCard">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/profile_view"
                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp" />


                        <TextView
                            android:id="@+id/video_name"
                            android:text="Test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/profile_view"
                            android:layout_toEndOf="@id/profile_view"
                            android:layout_alignTop="@id/profile_view"/>

                        <TextView
                            android:id="@+id/profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test"
                            android:layout_below="@+id/video_name"
                            android:layout_alignLeft="@+id/video_name"
                            android:layout_alignStart="@+id/video_name" />

                        <TextView
                            android:id="@+id/view_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test"
                            android:layout_toRightOf="@+id/profile_name"
                            android:layout_alignTop="@+id/profile_name"
                            android:layout_toEndOf="@+id/profile_name" />

                        <TextView
                            android:id="@+id/date_created"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test"
                            android:layout_toRightOf="@+id/view_number"
                            android:layout_alignTop="@+id/view_number"
                            android:layout_toEndOf="@+id/view_number"/>

                        <ImageView
                            android:id="@+id/dot_menu"
                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp" />

                </RelativeLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>





