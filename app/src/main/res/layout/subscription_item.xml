<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#119119">

            <ImageView
                android:id="@+id/subscription_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />


            <TextView
                android:id="@+id/subscription_name"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="Test"
                android:layout_below="@+id/subscription_photo"
                android:layout_alignLeft="@+id/subscription_photo"
                android:layout_alignStart="@+id/subscription_photo" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>